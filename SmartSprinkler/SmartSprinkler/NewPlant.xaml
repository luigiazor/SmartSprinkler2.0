<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartSprinkler.NewPlant">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Salvar" Text="salvar"
                     Clicked="Salvar_Clicked" />
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <Entry x:Name="plantEntry"
              Placeholder="Qual o nome da planta?"
               VerticalOptions="CenterAndExpand"
               Margin="16"/>
        <Entry x:Name="waterEntry"
               VerticalOptions="StartAndExpand"
               Keyboard="Numeric"
               Placeholder="a cada quantas horas ela será regada?"
               Margin="16"/>
    </StackLayout>
    
</ContentPage>