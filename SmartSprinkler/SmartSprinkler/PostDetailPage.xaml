<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartSprinkler.PostDetailPage">
    <StackLayout>
        <Entry x:Name="plantasEntry"/>
        <Entry x:Name="waterEntryedit"
               Placeholder="A cada quantas horas ela será regada?"
               Keyboard="Numeric"/>
        <Button Text="Update"
                x:Name="UpdateButton"
                Clicked="UpdateButton_Clicked"/>
        <Button Text="Delete"
                x:Name="DeleteButton"
                Clicked="DeleteButton_Clicked"/>
    </StackLayout>
    
</ContentPage>